{
  "manifest_version": 3,
  "name": "Job Application Checker",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "batman_logo.png",
    "48": "batman_logo.png",
    "128": "batman_logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["batman_logo.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "*://*/*"
  ]
}
